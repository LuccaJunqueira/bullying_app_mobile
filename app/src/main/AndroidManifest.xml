<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bullying_app">
    <!-- Permissão necessária para o Retrofit / acesso à rede -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BullyingApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ReportDetailActivity"
            android:exported="false"
            android:label="Detalhes do Relato" />
        <activity
            android:name=".SendReportActivity"
            android:exported="false"
            android:label="Enviar Relato" />
        <activity
            android:name=".ReportsActivity"
            android:exported="false"
            android:label="Relatos" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Cadastro" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>